        <url-pattern>/employee/listAllEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAllDepartments</servlet-name>
        <url-pattern>/department/listAllDepartments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployeeController</servlet-name>
        <url-pattern>/employee/addEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditEmployeeController</servlet-name>
        <url-pattern>/employee/editEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEmployeeController</servlet-name>
        <url-pattern>/employee/viewEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEmployeeController</servlet-name>
        <url-pattern>/employee/deleteEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDepartmentController</servlet-name>
        <url-pattern>/department/addDepartment</url-pattern>
