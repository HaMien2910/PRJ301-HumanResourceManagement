        <servlet-class>controller.employee.DeleteEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDepartmentController</servlet-name>
        <servlet-class>controller.department.AddDepartmentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditDepartmentController</servlet-name>
