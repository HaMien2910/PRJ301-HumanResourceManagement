        <servlet-class>controller.job.AddJobController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListAllJobsController</servlet-name>
        <servlet-class>controller.job.ListAllJobsController</servlet-class>
    </servlet>
