<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ListAllEmployeeController</servlet-name>
        <servlet-class>controller.employee.ListAllEmployeesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListAllDepartments</servlet-name>
        <servlet-class>controller.department.ListAllDepartments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployeeController</servlet-name>
        <servlet-class>controller.employee.AddEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditEmployeeController</servlet-name>
        <servlet-class>controller.employee.EditEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListAllEmployeeController</servlet-name>
        <url-pattern>/employee/listAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAllDepartments</servlet-name>
        <url-pattern>/department/listAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployeeController</servlet-name>
        <url-pattern>/employee/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditEmployeeController</servlet-name>
        <url-pattern>/employee/edit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
